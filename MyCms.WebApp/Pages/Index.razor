@page "/"
<section class="featured-posts-grid">
    <div class="container">
        <div class="row row-8">
            <IntroCategory></IntroCategory>
        </div>
    </div>
</section>

<div class="main-container container pt-24" id="main-container">

    <div class="row">
        <div class="col-lg-8 blog__content">
            <section class="section tab-post mb-16">
                <div class="title-wrap title-wrap--line">
                    <h3 class="section-title">آخرین عنوان ها</h3>
                    <div class="tabs tab-post__tabs">
                        <ul class="tabs__list">
                            <TitleTabNews IsActive="true"></TitleTabNews>
                        </ul>
                    </div>
                </div>
                <div class="tabs__content tabs__content-trigger tab-post__tabs-content">
                    <TabNews TabId="test"></TabNews>
                </div>
            </section>
        </div>
       <FavoriteNewsBar></FavoriteNewsBar>
    </div>
    <section class="section mb-0">
        <div class="title-wrap title-wrap--line">
            <h3 class="section-title">پربازدیدترین مقالات</h3>
        </div>
        <div id="owl-posts" class="owl-carousel owl-theme owl-carousel--arrows-outside">
            <SliderArticle></SliderArticle>
        </div>
    </section>
    <section class="section mb-0">
        <div class="row">
            <CategoryTopFiveNews></CategoryTopFiveNews>
        </div>
    </section>
    <div class="row">
        <div class="col-lg-8 blog__content mb-72">
            <section class="section">
                <div class="title-wrap title-wrap--line">
                    <h3 class="section-title">اخبار تاپ کالا</h3>
                    <a href="#" class="all-posts-url">نمایش همه</a>
                </div>
                <Article></Article>
            </section>
        </div>
        <aside class="col-lg-4 sidebar sidebar--1 sidebar--right">
            <aside class="widget widget_categories">
                <h4 class="widget-title">دسته بندی نوشته ها</h4>
                <ul>
                    <CategoryTitle></CategoryTitle>
                </ul>
            </aside>
        </aside>
    </div>
</div> 